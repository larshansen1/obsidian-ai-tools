# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Obsidian Vault Configuration
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault
OBSIDIAN_INBOX_FOLDER=inbox

# LLM Configuration
LLM_MODEL=anthropic/claude-sonnet-4
MAX_TRANSCRIPT_LENGTH=60000

# YouTube Data API v3 (optional - for metadata only)
# Get free key from: https://console.cloud.google.com/
# Free tier: 10,000 requests/day
# YOUTUBE_API_KEY=your_youtube_api_v3_key_here

# Decodo Scraper API (for transcripts via youtube_subtitles)
# Get from: https://decodo.com/
# Free tier: 2,500 requests
# Use BASIC authentication token from dashboard
# DECODO_API_KEY=your_basic_auth_token_here

# Supadata API (for YouTube transcripts)
# Get from: https://supadata.com/
# SUPADATA_KEY=your_supadata_api_key_here

# YouTube Transcript Provider Order
# Comma-separated list of providers to try in order
# Options: direct (free scraping), supadata (paid API), decodo (paid API)
YOUTUBE_TRANSCRIPT_PROVIDER_ORDER=direct,supadata,decodo

# Cache Configuration
CACHE_DIR=.cache
CACHE_TTL_HOURS=168

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT_HOURS=2
